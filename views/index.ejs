<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HR Admin System</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="login-overlay">
        <div class="login-box">
            <h2><i class="fas fa-user-shield"></i> HR System</h2>
            <p style="color:red; font-size:13px; margin-bottom:10px" id="login-error"></p>
            <form id="loginForm">
                <input type="text" id="login-user" placeholder="Email hoặc Mã NV" required>
                <input type="password" id="login-pass" placeholder="Mật khẩu" required>
                <button type="submit">Đăng Nhập</button>
            </form>
        </div>
    </div>

    <button class="menu-toggle" onclick="window.toggleSidebar()"><i class="fas fa-bars"></i></button>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <span class="app-title">Hệ Thống Nhân Sự</span>
            <button class="close-sidebar-btn" onclick="window.toggleSidebar()"><i class="fas fa-times"></i></button>
        </div>

        <div class="user-welcome" style="padding: 10px 25px; border-bottom: 1px solid rgba(255,255,255,0.1); margin-bottom: 10px;">
            <small style="color: #bdc3c7; display: block; font-size: 11px;">Xin chào,</small>
            <strong id="admin-display-name" style="color: #ecf0f1; font-size: 15px;">Admin</strong>
        </div>
        
        <div class="menu-list-container">
            <div class="menu-item active" id="menu_overview" onclick="window.switchTab('overview', this)"><i class="fas fa-chart-pie"></i> <span>Tổng Quan</span></div>
            <div class="menu-item" id="menu_employees" onclick="window.switchTab('employees', this)"><i class="fas fa-users"></i> <span>Nhân Viên</span></div>
            <div class="menu-item" id="menu_departments" onclick="window.switchTab('departments', this)"><i class="fas fa-building"></i> <span>Phòng Ban</span></div>
            <div class="menu-item" id="menu_positions" onclick="window.switchTab('positions', this)"><i class="fas fa-id-badge"></i> <span>Chức Vụ</span></div>
            <div class="menu-item" id="menu_schedule" onclick="window.switchTab('schedule', this)"><i class="fas fa-calendar-alt"></i> <span>Lịch Làm Việc</span></div>
            <div class="menu-item" id="menu_approvals" onclick="window.switchTab('approvals', this)"><i class="fas fa-user-check"></i> <span>Phê Duyệt</span></div>
            <div class="menu-item" id="menu_permissions" onclick="window.switchTab('permissions', this)"><i class="fas fa-shield-alt"></i> <span>Phân Quyền</span></div>
            <div class="menu-item" id="menu_history" onclick="window.switchTab('history', this)"><i class="fas fa-history"></i> <span>Lịch Sử Dữ Liệu</span></div>
            
            <div class="menu-item logout-btn" onclick="window.handleLogout()" style="margin-top: 20px; border-top: 1px solid rgba(255,255,255,0.1); color: #ff7675 !important;">
                <i class="fas fa-sign-out-alt"></i> <span>Đăng Xuất</span>
            </div>
        </div>
    </div>

    <div class="main">
        <div id="overview" class="tab active">
            <h2>Tổng Quan</h2>
            <div class="cards">
                <div class="card"><h3>Tổng nhân viên</h3><div class="num" id="total-staff">0</div></div>
                <div class="card"><h3 style="color:#2980b9">Đang Online</h3><div class="num" id="online-count" style="color:#2980b9">0</div></div>
                <div class="card"><h3>Đi làm hôm nay</h3><div class="num" id="working-today" style="color:#2ecc71">0</div></div>
                <div class="card"><h3>Nghỉ phép</h3><div class="num" id="off-today" style="color:#e74c3c">0</div></div>
            </div>
            <div class="charts" style="display:flex; gap:20px; flex-wrap:wrap">
                <div class="chart-box" style="flex:1; min-width:300px; background:white; padding:20px; border-radius:8px">
                    <h3>Tỷ lệ nhân sự</h3>
                    <div style="height:250px;"><canvas id="pieChart"></canvas></div>
                </div>
                <div class="chart-box" style="flex:1; min-width:300px; background:white; padding:20px; border-radius:8px">
                    <h3>Thống kê theo Phòng ban</h3>
                    <div id="dept-stats" style="margin-top:15px">Loading...</div>
                </div>
            </div>
        </div>

        <div id="employees" class="tab">
            <h2>Danh Sách Nhân Viên</h2>
            <div class="toolbar">
                <input type="text" id="search" placeholder="Tìm tên/mã..." onkeyup="window.filterData()">
                <button class="btn btn-primary" onclick="window.openModal('add')"><i class="fas fa-plus"></i> Thêm Mới</button>
            </div>
            <table class="perm-table">
                <thead><tr><th>Nhân Viên</th><th>Mã</th><th>Phòng Ban</th><th>Chức Vụ</th><th>Trạng Thái</th><th>Hành Động</th></tr></thead>
                <tbody id="tableBody"></tbody>
            </table>
        </div>

        <div id="departments" class="tab">
            <h2>Phòng Ban</h2>
            <div class="toolbar"><button class="btn btn-primary" onclick="window.openDeptModal('add')"><i class="fas fa-plus"></i> Thêm Phòng</button></div>
            <table class="perm-table">
                <thead><tr><th>STT</th><th>Tên</th><th>Mô Tả</th><th>Hành Động</th></tr></thead>
                <tbody id="deptTableBody"></tbody>
            </table>
        </div>

        <div id="positions" class="tab">
            <h2>Chức Vụ</h2>
            <div class="toolbar"><button class="btn btn-primary" onclick="window.openPosModal('add')"><i class="fas fa-plus"></i> Thêm Chức Vụ</button></div>
            <table class="perm-table">
                <thead><tr><th>STT</th><th>Tên</th><th>Mô Tả</th><th>Hành Động</th></tr></thead>
                <tbody id="posTableBody"></tbody>
            </table>
        </div>

        <div id="schedule" class="tab">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                <h2>Quản Lý Lịch Làm Việc</h2>
                <button class="btn btn-primary" onclick="window.saveScheduleChanges()"><i class="fas fa-save"></i> Lưu Lịch</button>
            </div>
            <div class="toolbar">
                <input type="week" id="weekPicker" style="width:200px" onchange="window.changeWeekPicker()">
                <select id="filterScheduleDept" onchange="window.filterSchedule()" style="width:200px"><option value="">-- Tất cả Phòng --</option></select>
                <input type="text" id="searchScheduleName" placeholder="Tìm tên..." onkeyup="window.filterSchedule()" style="width:200px">
            </div>
            <div style="background:white; border-radius:8px; padding:15px; overflow-x:auto;">
                <p style="font-size:0.9rem; color:#666; margin-bottom:10px">
                    <i class="fas fa-info-circle"></i> Click vào ô để đổi: <span style="color:#2ecc71; font-weight:bold">Đi làm</span> / <span style="color:#e74c3c; font-weight:bold">Nghỉ</span>
                </p>
                <table class="perm-table" style="width:100%;">
                    <thead><tr id="scheduleHeaderDates"></tr></thead>
                    <tbody id="scheduleTableBody"></tbody>
                </table>
            </div>
        </div>

        <div id="approvals" class="tab">
            <h2>Phê Duyệt Người Dùng</h2>
            <table class="perm-table">
                <thead><tr><th>Họ Tên / Email</th><th>SĐT</th><th>Trạng Thái</th><th>Hành Động</th></tr></thead>
                <tbody id="approvalTableBody"></tbody>
            </table>
        </div>

        <div id="permissions" class="tab">
            <h2>Thiết Lập Phân Quyền</h2>
            <div class="perm-container">
                <div class="perm-list">
                    <h4 style="margin-top:0; color:#2c3e50;">Chọn Đối Tượng</h4>
                    <select id="permTypeSelect" onchange="window.loadPermSubjects()" style="width:100%; padding:8px; margin-bottom:10px;">
                        <option value="pos">Theo Chức Vụ</option><option value="dept">Theo Phòng Ban</option><option value="user">Theo Nhân Viên</option>
                    </select>
                    <input type="text" id="permSearchInput" placeholder="Tìm nhân viên..." style="display:none; width:100%; padding:8px; margin-bottom:10px;">
                    <div id="permSubjectList" style="max-height:400px; overflow-y:auto;"></div>
                </div>
                <div class="perm-matrix">
                    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:15px;">
                        <h3 id="currentPermSubject" style="margin:0; color:#3498db;">---</h3>
                        <button class="btn btn-primary" onclick="window.savePermissions()">Lưu Quyền</button>
                    </div>
                    <table class="perm-table" style="width:100%">
                        <thead><tr><th>Chức Năng</th><th>Xem <input type="checkbox" onclick="window.toggleColumn('view', this)"></th><th>Thêm <input type="checkbox" onclick="window.toggleColumn('add', this)"></th><th>Sửa <input type="checkbox" onclick="window.toggleColumn('edit', this)"></th><th>Xóa <input type="checkbox" onclick="window.toggleColumn('delete', this)"></th></tr></thead>
                        <tbody id="permMatrixBody"></tbody>
                    </table>
                </div>
            </div>
        </div>

        <div id="history" class="tab">
             <h2>Lịch Sử Dữ Liệu</h2>
             <div style="margin-bottom:15px">
                 <select id="historyFilter" onchange="window.loadSystemHistory()" style="padding:8px; width:200px">
                     <option value="all">Tất cả</option><option value="employees">Nhân Viên</option><option value="departments">Phòng Ban</option>
                 </select>
             </div>
             <table class="perm-table">
                 <thead><tr><th>Thời gian</th><th>Người dùng</th><th>Hành động</th><th>Chi tiết</th></tr></thead>
                 <tbody id="historyTableBody"></tbody>
             </table>
        </div>
    </div>

    <div id="modal" class="modal">
        <div class="modal-content">
            <h2 id="modalTitle">Thông tin nhân viên</h2>
            <form id="empForm" onsubmit="window.saveEmployee(event)">
                <input type="hidden" id="empKey">
                <div class="form-grid">
                    <div class="form-group"><label>Mã NV (*)</label><input type="text" id="code" required></div>
                    <div class="form-group"><label>Họ Tên (*)</label><input type="text" id="name" required></div>
                    <div class="form-group"><label>Email (*)</label><input type="email" id="email" required></div>
                    <div class="form-group"><label>Mật khẩu</label><input type="text" id="password" placeholder="Để trống nếu không đổi"></div>
                    <div class="form-group"><label>Phòng Ban</label><select id="dept"></select></div>
                    <div class="form-group"><label>Chức Vụ</label><select id="pos"></select></div>
                    <div class="form-group"><label>Trạng thái</label><select id="status"><option value="working">Đang làm việc</option><option value="off">Đã nghỉ</option></select></div>
                    <input type="hidden" id="phone"><input type="hidden" id="address"><input type="hidden" id="startDate"><input type="hidden" id="shift"><input type="hidden" id="dob"><input type="hidden" id="nationality"><input type="hidden" id="visa"><input type="hidden" id="jlpt"><input type="hidden" id="car"><input type="hidden" id="licensePlate">
                </div>
                <div class="modal-footer"><button type="button" class="btn btn-danger" onclick="window.closeModal()">Đóng</button><button type="submit" class="btn btn-primary">Lưu</button></div>
            </form>
        </div>
    </div>
    <div id="deptModal" class="modal"><div class="modal-content" style="width:400px"><h3>Phòng Ban</h3><form onsubmit="window.saveDepartment(event)"><input type="hidden" id="deptKey"><div class="form-group"><label>Tên</label><input type="text" id="deptName" required></div><div class="form-group"><label>Mô tả</label><input type="text" id="deptDesc"></div><div class="modal-footer"><button type="button" class="btn btn-danger" onclick="window.closeDeptModal()">Đóng</button><button type="submit" class="btn btn-primary">Lưu</button></div></form></div></div>
    <div id="posModal" class="modal"><div class="modal-content" style="width:400px"><h3>Chức Vụ</h3><form onsubmit="window.savePosition(event)"><input type="hidden" id="posKey"><div class="form-group"><label>Tên</label><input type="text" id="posName" required></div><div class="form-group"><label>Mô tả</label><input type="text" id="posDesc"></div><div class="modal-footer"><button type="button" class="btn btn-danger" onclick="window.closePosModal()">Đóng</button><button type="submit" class="btn btn-primary">Lưu</button></div></form></div></div>
    <div id="approvalModal" class="modal"><div class="modal-content"><h3>Duyệt User</h3><form onsubmit="window.approveUser(event)"><input type="hidden" id="approveKey"><input id="approveName" placeholder="Tên" required style="width:100%; margin-bottom:10px; padding:8px"><input id="approveCode" placeholder="Mã NV Mới" required style="width:100%; margin-bottom:10px; padding:8px"><select id="approveDept" required style="width:100%; margin-bottom:10px; padding:8px"></select><select id="approvePos" required style="width:100%; margin-bottom:10px; padding:8px"></select><input type="hidden" id="approveEmail"><input type="hidden" id="approvePhone"><button class="btn btn-primary">Duyệt</button> <button type="button" class="btn btn-danger" onclick="window.closeApprovalModal()">Đóng</button></form></div></div>

    <script type="module" src="/js/script.js"></script>
</body>
</html>